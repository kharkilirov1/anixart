<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/blue"/>
            <solid android:color="#20e0e0e0"/>
            <padding
                android:left="16dp"
                android:top="1dp"
                android:right="16dp"
                android:bottom="1dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/blue"/>
            <solid android:color="@android:color/transparent"/>
            <padding
                android:left="16dp"
                android:top="1dp"
                android:right="16dp"
                android:bottom="1dp"/>
        </shape>
    </item>
</selector>
