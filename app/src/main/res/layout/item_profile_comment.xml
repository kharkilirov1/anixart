<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">
    <RelativeLayout
        android:background="@drawable/background_comment_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/avatar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="24dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="14sp"
                            android:textColor="?attr/primaryTextColor"
                            android:ellipsize="end"
                            android:id="@+id/nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/verified"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_verified"
                            android:layout_marginStart="2dp"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/sponsor"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_crown"
                            android:layout_marginStart="2dp"/>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="?attr/secondaryTextColor"
                            android:ellipsize="end"
                            android:id="@+id/contentType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:layout_weight="1"
                            android:layout_marginStart="3dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="14sp"
                            android:textColor="?attr/secondaryTextColor"
                            android:ellipsize="end"
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/ic_chevron_end"
                            app:tint="?attr/iconTintColor"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="?attr/primaryTextColor"
                        android:id="@+id/message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:lineSpacingExtra="2sp"/>
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:textColor="?attr/tertiaryTextColor"
                        android:id="@+id/deleted"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment_deleted"
                        android:layout_weight="1"
                        android:lineSpacingExtra="2sp"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/spoilerHideShow"
                        android:background="@drawable/background_comment_spoiler"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="?attr/tertiaryTextColor"
                            android:gravity="center"
                            android:id="@+id/tvSpoilerHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="@string/comment_spoiler_warning"
                            android:layout_weight="1"/>
                        <TextView
                            android:textSize="13sp"
                            android:textColor="?attr/tertiaryTextColor"
                            android:gravity="center"
                            android:id="@+id/tvSpoilerAction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/comment_spoiler_show"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:textSize="13sp"
                        android:textColor="?attr/secondaryTextColor"
                        android:gravity="center_vertical"
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/edited"
                        android:visibility="gone"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_edit"
                        android:layout_marginStart="6dp"
                        app:tint="?attr/tertiaryTextColor"/>
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:id="@+id/votes_layout"
                            android:background="@drawable/background_comment_vote_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="13sp"
                                android:textColor="?attr/tertiaryTextColor"
                                android:id="@+id/votes"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:fontFamily="@font/roboto_medium"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
