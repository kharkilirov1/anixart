<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="18dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">
    <TextView
        android:textSize="18sp"
        android:textColor="?attr/primaryTextColor"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/import_title"
        android:fontFamily="@font/roboto_medium"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.swiftsoft.anixartd.utils.radiobutton.CustomRadioGroup
                    android:orientation="vertical"
                    android:id="@+id/container_custom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp">
                    <com.swiftsoft.anixartd.utils.radiobutton.types.TwoFieldsRadioButton
                        android:id="@+id/itemShikimori"
                        android:background="@drawable/background_custom_radio_buttons_unselected_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:rbDescription="@string/import_importer_description_shikimori"
                        app:rbTitle="@string/import_importer_shikimori"/>
                </com.swiftsoft.anixartd.utils.radiobutton.CustomRadioGroup>
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/secondaryTextColor"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/choose"
                    android:background="@drawable/dashed_rect_round"
                    android:padding="24dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="@string/import_drop_file"
                    android:lineSpacingExtra="3dp"/>
                <TextView
                    android:textColor="#2e7d32"
                    android:id="@+id/chosen"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/import_file_chosen"
                    android:fontFamily="@font/roboto_medium"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/tertiaryTextColor"
                    android:id="@+id/import_drop_file_hint"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/import_drop_file_hint_shikimori"/>
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp">
                    <com.google.android.material.button.MaterialButton
                        android:enabled="false"
                        android:id="@+id/btnContinue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/import_process"
                        android:alpha="0.3"
                        android:textAllCaps="false"
                        style="@style/AnixButton.Unelevated"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/background_warning"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:textColor="?attr/warningTextColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/warning"
                                android:fontFamily="@font/roboto_medium"/>
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_alert"
                                android:layout_marginStart="4dp"
                                app:tint="?attr/warningTextColor"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:textColor="?attr/warningTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/import_warning"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>
