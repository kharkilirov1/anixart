<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_bottom_sheet"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <View
                android:background="@drawable/rounded_rectangle_bs"
                android:layout_width="28dp"
                android:layout_height="4dp"/>
        </RelativeLayout>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingLeft="24dp"
                        android:paddingTop="16dp"
                        android:paddingRight="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="?attr/primaryTextColor"
                            android:ellipsize="end"
                            android:id="@+id/release_video_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:fontFamily="@font/roboto_medium"/>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp">
                            <TextView
                                android:textSize="14sp"
                                android:textColor="?attr/secondaryTextColor"
                                android:ellipsize="end"
                                android:id="@+id/release_video_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"/>
                            <TextView
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/secondaryTextColor"
                                android:id="@+id/release_video_dot"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â€¢"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="?attr/secondaryTextColor"
                                android:ellipsize="end"
                                android:id="@+id/release_video_timestamp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"/>
                        </LinearLayout>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="?attr/secondaryTextColor"
                            android:ellipsize="end"
                            android:id="@+id/release_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"/>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="?attr/secondaryTextColor"
                            android:ellipsize="end"
                            android:id="@+id/release_video_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"/>
                        <View
                            android:background="@color/border"
                            android:layout_width="wrap_content"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="4dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/release_video_open_release"
                        android:paddingLeft="24dp"
                        android:paddingTop="12dp"
                        android:paddingRight="24dp"
                        android:paddingBottom="12dp"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_info_outline"
                            app:tint="?attr/iconTintColor"/>
                        <TextView
                            android:textColor="?attr/primaryTextColor"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/open_release"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/release_video_open_link"
                        android:paddingLeft="24dp"
                        android:paddingTop="12dp"
                        android:paddingRight="24dp"
                        android:paddingBottom="12dp"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_open_link"
                            app:tint="?attr/iconTintColor"/>
                        <TextView
                            android:textColor="?attr/primaryTextColor"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/open_in_third_party_app"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/release_video_copy_link"
                        android:paddingLeft="24dp"
                        android:paddingTop="12dp"
                        android:paddingRight="24dp"
                        android:paddingBottom="12dp"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_link"
                            app:tint="?attr/iconTintColor"/>
                        <TextView
                            android:textColor="?attr/primaryTextColor"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/copy_link"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/release_video_add_to_favorite"
                        android:paddingLeft="24dp"
                        android:paddingTop="12dp"
                        android:paddingRight="24dp"
                        android:paddingBottom="12dp"
                        android:visibility="gone"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_plus"
                            app:tint="?attr/iconTintColor"/>
                        <TextView
                            android:textColor="?attr/primaryTextColor"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_video_to_favorite"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/release_video_remove_from_favorite"
                        android:paddingLeft="24dp"
                        android:paddingTop="12dp"
                        android:paddingRight="24dp"
                        android:paddingBottom="12dp"
                        android:visibility="gone"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_trash_outline"
                            app:tint="@color/red"/>
                        <TextView
                            android:textColor="@color/red"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/remove_video_from_favorite"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <RelativeLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:textSize="16sp"
                android:gravity="center"
                android:id="@+id/close"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="4dp"
                android:text="@string/close"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:letterSpacing="0.02"
                style="@style/AnixButton.Bottom"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
