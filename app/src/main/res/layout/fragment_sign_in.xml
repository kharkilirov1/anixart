<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="104dp">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_autoPlay="false"
                    app:lottie_loop="false"
                    app:lottie_rawRes="@raw/logo"/>
            </RelativeLayout>
            <TextView
                android:textSize="38sp"
                android:textColor="?attr/primaryTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/app_name"
                android:fontFamily="@font/varela_round"/>
        </LinearLayout>
        <include
            android:visibility="gone"
            layout="@layout/item_update_available_auth"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_or_pass"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/password"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView
                android:textSize="15sp"
                android:textColor="?attr/secondaryTextColor"
                android:gravity="center_vertical"
                android:id="@+id/restore_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/forgot_password"
                android:layout_weight="0.6"
                android:paddingStart="4dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/sign_in_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sign_in"
                android:layout_weight="0.4"
                style="@style/AnixButton.Unelevated"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/or_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">
            <View
                android:id="@+id/line"
                android:background="@color/border"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.4"/>
            <TextView
                android:textColor="?attr/tertiaryTextColor"
                android:gravity="center"
                android:id="@+id/or_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/or"
                android:layout_weight="0.2"/>
            <View
                android:id="@+id/line_2"
                android:background="@color/border"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.4"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/sign_up_button"
            android:background="@drawable/button_sign_in_with"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="6dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">
                    <TextView
                        android:textColor="?attr/colorAccent"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/create_profile"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:fontFamily="@font/roboto_medium"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp">
            <RelativeLayout
                android:id="@+id/sign_in_with_vk"
                android:background="@drawable/button_sign_in_with"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_marginEnd="6dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_vk"
                            android:layout_weight="1"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"/>
                        <TextView
                            android:textColor="?attr/secondaryTextColor"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vk"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/sign_in_with_google"
                android:background="@drawable/button_sign_in_with"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_marginStart="6dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_google"
                            android:layout_weight="1"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"/>
                        <TextView
                            android:textColor="?attr/secondaryTextColor"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/google"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:textColor="?attr/secondaryTextColor"
            android:id="@+id/auth_skip_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:textAllCaps="false"
            android:letterSpacing="0"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
