<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="158dp">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/pincode"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:gravity="center"
            android:id="@+id/email_information"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/auth_verify_hint"
            android:lineSpacingExtra="3sp"/>
        <com.mukesh.OtpView
            android:id="@+id/code_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:itemBackground="@android:color/transparent"
            android:inputType="number"
            app:itemCount="4"
            app:lineColor="#707070"
            app:lineWidth="1dp"
            app:viewType="textureView"/>
        <TextView
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="Если код не приходит, проверьте на своей почте папку «Спам»"
            android:lineSpacingExtra="3sp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/resend_code_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/send_again"
            style="@style/AnixButton.Outlined"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
