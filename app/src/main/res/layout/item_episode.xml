<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="56dp"
        android:paddingStart="16dp">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textColor="?attr/primaryTextColor"
                        android:id="@+id/primaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Серия 1"
                        android:fontFamily="@font/roboto_medium"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/tertiaryTextColor"
                        android:id="@+id/secondaryText"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Просмотрено до 12:00"
                        android:lineSpacingExtra="2dp"/>
                </LinearLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/watched_layout"
                    android:visibility="gone"
                    android:layout_width="38dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/watched"
                        android:clickable="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_circle_outline"
                        android:inputType="text"
                        app:tint="?attr/iconAltTintColor"/>
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/filler_layout"
                    android:background="@drawable/background_badge_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <TextView
                        android:textSize="9sp"
                        android:textColor="?attr/tertiaryTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="филлер"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_medium"
                        android:letterSpacing="0.02"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:gravity="center"
            android:id="@+id/download"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="38dp"
            android:layout_height="56dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_download"
                app:tint="?attr/tertiaryTextColor"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:id="@+id/more"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="38dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_more"
                app:tint="?attr/tertiaryTextColor"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:background="@color/separator_alpha_5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
