<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_bottom_sheet"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <View
                android:background="@drawable/rounded_rectangle_bs"
                android:layout_width="28dp"
                android:layout_height="4dp"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingTop="16dp"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="?attr/primaryTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comment_spoiler_text"
                android:lineSpacingExtra="4sp"/>
            <TextView
                android:textColor="?attr/secondaryTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/comment_spoiler_desc"
                android:lineSpacingExtra="4sp"/>
            <View
                android:background="@color/border"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/isSpoiler"
            android:paddingLeft="24dp"
            android:paddingTop="12dp"
            android:paddingRight="24dp"
            android:paddingBottom="12dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:foreground="?attr/selectableItemBackground">
            <RadioButton
                android:id="@+id/rbIsSpoiler"
                android:background="@null"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-4dp"/>
            <TextView
                android:textColor="?attr/primaryTextColor"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comment_spoiler_contains"
                android:layout_marginStart="-4dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/isNotSpoiler"
            android:paddingLeft="24dp"
            android:paddingTop="12dp"
            android:paddingRight="24dp"
            android:paddingBottom="12dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:foreground="?attr/selectableItemBackground">
            <RadioButton
                android:id="@+id/rbIsNotSpoiler"
                android:background="@null"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-4dp"/>
            <TextView
                android:textColor="?attr/primaryTextColor"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comment_spoiler_not_contains"
                android:layout_marginStart="-4dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
