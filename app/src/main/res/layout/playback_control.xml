<?xml version="1.0" encoding="utf-8"?>
<com.swiftsoft.anixartd.utils.FitsSystemWindowRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:background="#60000000"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/controlLayout"
        android:duplicateParentState="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="false">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/close"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_player_back"
                    android:layout_marginStart="8dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:ellipsize="end"
                        android:id="@+id/tvTitleName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"/>
                    <TextView
                        android:textSize="13sp"
                        android:textColor="#e0e0e0"
                        android:id="@+id/tvEpisodeName"
                        android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/spnSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_play_speed"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            app:tint="#ffffff"/>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="#ffffff"
                            android:id="@+id/tvSpeedSelected"
                            android:paddingBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_down"
                            android:layout_weight="1"
                            app:tint="#ffffff"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="8dp">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/spnQuality"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_quality"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            app:tint="#ffffff"/>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="#ffffff"
                            android:id="@+id/tvQualSelected"
                            android:paddingBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_down"
                            android:layout_weight="1"
                            app:tint="#ffffff"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageButton
                    android:id="@+id/lockController"
                    android:background="@null"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_player_unlock"/>
            </LinearLayout>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyle"/>
        <TextView
            android:textSize="32sp"
            android:textColor="#ffffff"
            android:id="@+id/scrollTime"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/navButtons"
            android:paddingTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageButton
                android:id="@+id/previous"
                android:background="@null"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="32dp"
                android:src="@drawable/ic_player_previous"/>
            <ImageButton
                android:id="@+id/exo_play"
                android:background="@null"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:src="@drawable/ic_player_play"/>
            <ImageButton
                android:id="@+id/exo_pause"
                android:background="@null"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:src="@drawable/ic_player_pause"/>
            <ImageButton
                android:id="@+id/next"
                android:background="@null"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="32dp"
                android:src="@drawable/ic_player_next"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/controller"
            android:background="@drawable/background_player_timebar"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <TextView
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:id="@+id/exo_position"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:includeFontPadding="false"/>
                <com.google.android.exoplayer2.p009ui.DefaultTimeBar
                    android:id="@+id/exo_progress"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:bar_height="2dp"
                    app:buffered_color="#c0ffffff"
                    app:played_color="#e84c3d"
                    app:unplayed_color="#40ffffff"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:id="@+id/exo_duration"
                    android:paddingLeft="8dp"
                    android:paddingRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:includeFontPadding="false"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/fastRewind"
                    android:padding="6dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_player_rewind_fast"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/pipMode"
                    android:padding="6dp"
                    android:visibility="gone"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_player_pip"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/resizeMode"
                    android:padding="6dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_player_fill"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/lock_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageButton
            android:id="@+id/unlockController"
            android:background="@drawable/background_lock_button"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_player_lock"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</com.swiftsoft.anixartd.utils.FitsSystemWindowRelativeLayout>
