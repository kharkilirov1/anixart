<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rating_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:textSize="18sp"
                android:textColor="?attr/primaryTextColor"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/rating"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/rating_grade_few_votes_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp">
            <TextView
                android:textColor="?attr/secondaryTextColor"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rating_few_votes"
                android:maxLines="2"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/rating_grade_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="32dp">
                <TextView
                    android:textSize="46sp"
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTextColor"
                    android:gravity="center_horizontal"
                    android:id="@+id/grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:maxLength="3"
                    android:fontFamily="@font/varela_round"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/secondaryTextColor"
                    android:gravity="center_horizontal"
                    android:id="@+id/votes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">
                    <TextView
                        android:textSize="11sp"
                        android:textColor="?attr/secondaryTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:layout_marginEnd="8dp"/>
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_rating_five"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progress="0"
                        android:backgroundTint="?attr/progressBackTint"
                        app:indicatorColor="?attr/progressTint"
                        app:trackColor="?attr/progressBackTint"
                        app:trackCornerRadius="10dp"
                        app:trackThickness="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">
                    <TextView
                        android:textSize="11sp"
                        android:textColor="?attr/secondaryTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:layout_marginEnd="8dp"/>
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_rating_four"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progress="0"
                        android:backgroundTint="?attr/progressBackTint"
                        app:indicatorColor="?attr/progressTint"
                        app:trackColor="?attr/progressBackTint"
                        app:trackCornerRadius="10dp"
                        app:trackThickness="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">
                    <TextView
                        android:textSize="11sp"
                        android:textColor="?attr/secondaryTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:layout_marginEnd="8dp"/>
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_rating_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progress="0"
                        android:backgroundTint="?attr/progressBackTint"
                        app:indicatorColor="?attr/progressTint"
                        app:trackColor="?attr/progressBackTint"
                        app:trackCornerRadius="10dp"
                        app:trackThickness="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">
                    <TextView
                        android:textSize="11sp"
                        android:textColor="?attr/secondaryTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:layout_marginEnd="8dp"/>
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_rating_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progress="0"
                        android:backgroundTint="?attr/progressBackTint"
                        app:indicatorColor="?attr/progressTint"
                        app:trackColor="?attr/progressBackTint"
                        app:trackCornerRadius="10dp"
                        app:trackThickness="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="11sp"
                        android:textColor="?attr/secondaryTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_marginEnd="8dp"/>
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_rating_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progress="0"
                        android:backgroundTint="?attr/progressBackTint"
                        app:indicatorColor="?attr/progressTint"
                        app:trackColor="?attr/progressBackTint"
                        app:trackCornerRadius="10dp"
                        app:trackThickness="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/vote_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/avatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>
                <ProgressBar
                    android:id="@+id/voteProgress"
                    android:visibility="gone"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:indeterminateTint="#ffffff"
                    style="?android:attr/progressBarStyle"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_no_voted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/star1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="true"
                    app:srcCompat="@drawable/star_border"
                    app:tint="?attr/iconAltTintColor"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/star2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="true"
                    app:srcCompat="@drawable/star_border"
                    app:tint="?attr/iconAltTintColor"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/star3"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="true"
                    app:srcCompat="@drawable/star_border"
                    app:tint="?attr/iconAltTintColor"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/star4"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="true"
                    app:srcCompat="@drawable/star_border"
                    app:tint="?attr/iconAltTintColor"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/star5"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="true"
                    app:srcCompat="@drawable/star_border"
                    app:tint="?attr/iconAltTintColor"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/layout_voted"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/rating_bar_text"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_star_rate"
                                android:layout_weight="1"
                                app:tint="?attr/colorAccent"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="?attr/colorAccent"
                                android:id="@+id/rating_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:paddingStart="2dp"/>
                        </LinearLayout>
                        <RatingBar
                            android:id="@+id/rating_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize="0.5"
                            style="?android:attr/ratingBarStyleSmall"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="12sp"
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/you_voted"
                        android:layout_weight="1"/>
                </LinearLayout>
                <RelativeLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/delete_vote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change"
                        android:singleLine="true"
                        style="@style/AnixButton.Outlined"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/appbar_separator"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
</LinearLayout>
