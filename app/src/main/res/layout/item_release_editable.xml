<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingEnd="12dp"
        app:srcCompat="@drawable/ic_drag_vertical"
        app:tint="?attr/iconTintColor"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="134dp"
            android:animateLayoutChanges="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
            <RelativeLayout
                android:gravity="center"
                android:id="@+id/status_layout"
                android:background="#e65c6bc0"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/poster">
                <TextView
                    android:textSize="12dp"
                    android:textColor="#d5dbff"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/border_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/primaryTextColor"
                android:ellipsize="end"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"/>
            <ImageView
                android:id="@+id/remove"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                app:srcCompat="@drawable/ic_close"
                app:tint="@color/red"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/secondaryTextColor"
                android:ellipsize="end"
                android:id="@+id/episodes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/rating_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/secondaryTextColor"
                    android:id="@+id/dot"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/secondaryTextColor"
                    android:ellipsize="end"
                    android:id="@+id/grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="3"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    app:srcCompat="@drawable/ic_star_rate"
                    app:tint="?attr/secondaryTextColor"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/favorite"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="1dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/ic_favorite"
                app:tint="@color/bright_sun"/>
        </LinearLayout>
        <TextView
            android:textSize="12.5sp"
            android:textColor="?attr/tertiaryTextColor"
            android:ellipsize="end"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="4"
            android:lineSpacingExtra="2sp"/>
    </LinearLayout>
</LinearLayout>
