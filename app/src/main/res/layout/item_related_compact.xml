<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="46dp"
            android:layout_height="64dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
            <RelativeLayout
                android:background="@drawable/border_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp">
            <TextView
                android:textColor="?attr/primaryTextColor"
                android:ellipsize="end"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/secondaryTextColor"
                    android:ellipsize="end"
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/rating_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/secondaryTextColor"
                        android:id="@+id/dot"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="?attr/secondaryTextColor"
                        android:ellipsize="end"
                        android:id="@+id/grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="3"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        app:srcCompat="@drawable/ic_star_rate"
                        app:tint="?attr/secondaryTextColor"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/favorite"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="8dp"
                    app:srcCompat="@drawable/ic_favorite"
                    app:tint="@color/bright_sun"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="?attr/secondaryTextColor"
                    android:ellipsize="end"
                    android:id="@+id/category"
                    android:background="@drawable/background_related_category"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/inactive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <View
                android:background="@color/appbar_separator"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:textColor="?attr/tertiaryTextColor"
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вы\10здесь"
                style="?attr/textAppearanceLabelLarge"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
