<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/video_banners_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <TextView
            android:textSize="18sp"
            android:textColor="?attr/primaryTextColor"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/release_videos"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/colorPrimary"
            android:gravity="center"
            android:id="@+id/video_banner_show_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/show_more"
            android:fontFamily="@font/roboto_medium"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/colorPrimary"
            android:gravity="center"
            android:id="@+id/video_appeal"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/appeal"
            android:fontFamily="@font/roboto_medium"/>
    </LinearLayout>
    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/video_banners_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="14sp"
        android:id="@+id/video_appeal_hint"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/release_video_empty"
        android:lineSpacingExtra="4sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:background="@color/appbar_separator"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
</LinearLayout>
