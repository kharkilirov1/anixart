<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/stats_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <TextView
            android:textSize="18sp"
            android:textColor="?attr/primaryTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/in_lists"
            android:fontFamily="@font/roboto_medium"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/statsRegularLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/statsView"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/statsLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/watchingView"
                        android:background="@color/green"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <View
                        android:id="@+id/planView"
                        android:background="@color/purple"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <View
                        android:id="@+id/completedView"
                        android:background="@color/blue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <View
                        android:id="@+id/holdOnView"
                        android:background="@color/yellow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <View
                        android:id="@+id/droppedView"
                        android:background="@color/red"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/watchingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp">
                        <View
                            android:background="@drawable/ic_rectangle_round"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:backgroundTint="@color/green"/>
                        <TextView
                            android:textColor="?attr/secondaryTextColor"
                            android:paddingLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/list_watching"
                            android:singleLine="true"
                            android:letterSpacing="0.05"/>
                        <TextView
                            android:textColor="?attr/primaryTextColor"
                            android:ellipsize="none"
                            android:id="@+id/watchingCount"
                            android:paddingLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123 456"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:background="@drawable/ic_rectangle_round"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:backgroundTint="@color/purple"/>
                        <TextView
                            android:textColor="?attr/secondaryTextColor"
                            android:paddingLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/list_plan"
                            android:singleLine="true"
                            android:letterSpacing="0.05"/>
                        <TextView
                            android:textColor="?attr/primaryTextColor"
                            android:ellipsize="none"
                            android:id="@+id/planCount"
                            android:paddingLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123 456"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp">
                        <View
                            android:background="@drawable/ic_rectangle_round"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:backgroundTint="@color/yellow"/>
                        <TextView
                            android:textColor="?attr/secondaryTextColor"
                            android:paddingLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/list_hold_on"
                            android:singleLine="true"
                            android:letterSpacing="0.05"/>
                        <TextView
                            android:textColor="?attr/primaryTextColor"
                            android:ellipsize="none"
                            android:id="@+id/holdOnCount"
                            android:paddingLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123 456"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:background="@drawable/ic_rectangle_round"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:backgroundTint="@color/red"/>
                        <TextView
                            android:textColor="?attr/secondaryTextColor"
                            android:paddingLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/list_dropped"
                            android:singleLine="true"
                            android:letterSpacing="0.05"/>
                        <TextView
                            android:textColor="?attr/primaryTextColor"
                            android:ellipsize="none"
                            android:id="@+id/droppedCount"
                            android:paddingLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123 456"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/completedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <View
                    android:background="@drawable/ic_rectangle_round"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:backgroundTint="@color/blue"/>
                <TextView
                    android:textColor="?attr/secondaryTextColor"
                    android:paddingLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/list_completed"
                    android:singleLine="true"
                    android:letterSpacing="0.05"/>
                <TextView
                    android:textColor="?attr/primaryTextColor"
                    android:id="@+id/completedCount"
                    android:paddingLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123 456"
                    android:singleLine="true"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/statsAnnounceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="34dp"
                android:layout_height="34dp"
                app:lottie_autoPlay="true"
                app:lottie_colorFilter="?attr/iconTintColor"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/icon_clock"
                app:lottie_speed="0.8"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">
                <TextView
                    android:textColor="@color/purple"
                    android:id="@+id/planAnnounceCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 пользователей планируют"
                    android:fontFamily="@font/roboto_medium"/>
                <TextView
                    android:textColor="?attr/secondaryTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/list_announce_plan_1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/appbar_separator"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
</LinearLayout>
